@using Abp.Extensions
@using SoftBreeze.BlueHrm
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@model SoftBreeze.BlueHrm.Web.Areas.Pim.Models.CreateOrEditEmployeeModalViewModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditEmployee") + ": " + Model.Employee.Fullname) : L("CreateEmployee")))
<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#EmployeeInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("BasicInformations")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="EmployeeInformationsTab">
                <form action="@Url.Action("Create")" name="EmployeeInformationsForm" id="EmployeeInformationsForm" method="POST"
                      role="form" novalidate class="form-validation">
                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.Employee.Id" />
                    }

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input type="text" name="Number" class="form-control@(Model.Employee.Number.IsNullOrEmpty() ? "" : " edited")"
                                       value="@Model.Employee.Number" required>
                                <label>@L("Number")</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input class="form-control@(Model.Employee.FirstName.IsNullOrEmpty() ? "" : " edited")"
                                       value="@Model.Employee.FirstName" type="text" name="FirstName"
                                       required maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxNameLength">
                                <label>@L("FirstName")</label>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input class="form-control@(Model.Employee.MiddleName.IsNullOrEmpty() ? "" : " edited")"
                                       value="@Model.Employee.MiddleName" type="text" name="MiddleName"
                                       required maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxNameLength">
                                <label>@L("MiddleName")</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input class="form-control@(Model.Employee.LastName.IsNullOrEmpty() ? "" : " edited")"
                                       value="@Model.Employee.LastName" type="text" name="LastName"
                                       required maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxNameLength">
                                <label>@L("LastName")</label>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input type="email" name="EmailAddress" class="form-control" required 
                                       maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxEmailAddressLength">
                                <label>@L("EmailAddress")</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input type="text" name="Username" class="form-control@(Model.Employee.Username.IsNullOrEmpty() ? "" : " edited")"
                                       value="@Model.Employee.Username" required maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxUserNameLength">
                                <label>@L("UserName")</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input id="EditUser_Password" type="password" name="Password" class="form-control"
                                       maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxPlainPasswordLength"
                                       minlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MinPlainPasswordLength">
                                <label>@L("Password")</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                <input type="password" name="PasswordRepeat" class="form-control"
                                       maxlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MaxPlainPasswordLength"
                                       minlength="@SoftBreeze.BlueHrm.Authorization.Users.User.MinPlainPasswordLength"
                                       equalto="#EditUser_Password">
                                <label>@L("PasswordRepeat")</label>
                            </div>
                        </div>
                    </div>




                    @*<div class="md-checkbox-list">
                            <div class="md-checkbox">
                                <input id="EditUser_IsActive" class="md-check" type="checkbox" name="User.IsActive" value="true"
                                       @Html.Raw(Model.User.IsActive ? "checked=\"checked\"" : "")>
                                <label for="EditUser_IsActive">
                                    <span class="inc"></span>
                                    <span class="check"></span>
                                    <span class="box"></span>
                                    @L("Active")
                                </label>
                            </div>
                        </div>*@
                </form>
            </div>

        </div>
    </div>
</div>
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
