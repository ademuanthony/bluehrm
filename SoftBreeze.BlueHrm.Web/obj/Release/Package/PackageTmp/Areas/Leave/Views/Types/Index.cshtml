@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@using SoftBreeze.BlueHrm.Authorization
@{
    ViewBag.CurrentPageName = PageNames.App.Leave.LeaveTypes;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Leave/Views/Types/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Leave/Views/Types/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Leave/Views/Types/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title"> 
                <h1>
                    <span>@L("LeaveTypes")</span> <small>@L("LeaveTypesHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions.Pages_Leave_LeaveTypes_Create))
        {
            <button id="CreateNewLeaveTypeButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateLeaveType")</button>
        }
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">
        <div id="LeaveTypesTable"></div>
    </div>
</div>
