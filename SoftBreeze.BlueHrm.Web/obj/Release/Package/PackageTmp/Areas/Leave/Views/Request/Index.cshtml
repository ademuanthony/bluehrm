@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@using SoftBreeze.BlueHrm.Authorization
@{
    ViewBag.CurrentPageName = PageNames.App.Leave.Requests;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Leave/Views/Request/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Leave/Views/Request/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Leave/Views/Request/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title"> 
                <h1>
                    <span>@L("Requests")</span> <small>@L("RequestsHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions.Pages_Leave_LeaveRequest_MakeRequest))
        {
            <button id="MakeRequestButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("MakeRequest")</button>
        }
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">

        <div class="row">

            <form id="LoadRequestForm">
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control edited" type="text" name="EmployeeNumber" required>
                        <label>@L("EmployeeNumber")</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input">
                        @Html.DropDownList("LeavePeriodId", ViewBag.LeaveTypeId as SelectList, new {@class = "form-control edited"})
                        <label>@L("LeaveType")</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input">
                        @Html.DropDownList("PeriodId", ViewBag.PeriodId as SelectList, new { @class = "form-control edited" })
                        <label>@L("LeavePeriod")</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input">
                        @Html.DropDownList("Status", ViewBag.Status as SelectList, new {@class = "form-control edited"})
                        <label>@L("Status")</label>
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-4 text-center">
                    <button style="margin-top: 15px;" id="LoadButton" class="btn btn-default green-dark">
                        <i class="fa fa-search"></i> @L("Load")
                    </button>
                </div>
            </form>


            
        </div>

        
    </div>
    <div class="portlet-body">
        <div id="RequestsTable"></div>
    </div>
</div>
