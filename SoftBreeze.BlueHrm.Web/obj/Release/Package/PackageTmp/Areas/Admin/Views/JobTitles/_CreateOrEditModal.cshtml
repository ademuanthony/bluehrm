@using Abp.Extensions
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@using SoftBreeze.BlueHrm.Authorization.Roles
@model SoftBreeze.BlueHrm.Web.Areas.Admin.Models.JobConfiguration.CreateOrEditJobViewModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml",
    new ModalHeaderViewModel(Model.IsEditMode ? (L("EditJobTitle") + ": " + Model.Job.Title) : L("CreateNewJobTitle")))

<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#JobInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("JobInformation")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="JobInformationsTab">

                <form name="JobInformationsForm" role="form" novalidate class="form-validation">

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.Job.Id" />
                    }

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.Job.Title.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="Title" value="@Model.Job.Title">
                        <label>@L("JobTitle")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <textarea class="form-control@(Model.Job.Description.IsNullOrEmpty() ? "" : " edited")"
                                  name="Description">
                            @Model.Job.Description
                        </textarea>
                        <label>@L("Description")</label>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>



@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")