@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@{
    ViewBag.CurrentPageName = PageNames.App.Performance.Record;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Performance/Views/Record/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Performance/Views/Record/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Performance/Views/Record/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title"> 
                <h1>
                    <span>@L("PerformanceRecord")</span> <small>@L("PerformanceRecordHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">

        <div class="row">

            <form id="LoadForm">
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control edited" type="text" name="EmployeeNumber">
                        <label>@L("EmployeeNumber")</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownList("PeriodId", ViewBag.Periods as SelectList, new {@class = "form-control edited"})
                        <label>@L("Period")</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <button style="margin-top: 15px;" id="LoadButton" class="btn btn-default green-dark"><i class="fa fa-search"></i> @L("Load")</button>
                </div>

            </form>


        </div>


    </div>

    <div class="portlet-body">
        <div id="RecordTable"></div>
    </div>
</div>
