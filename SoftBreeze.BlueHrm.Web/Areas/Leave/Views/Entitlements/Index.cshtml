@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@using SoftBreeze.BlueHrm.Authorization
@{
    ViewBag.CurrentPageName = PageNames.App.Leave.LeaveEntitlements;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Leave/Views/Entitlements/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Leave/Views/Entitlements/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Leave/Views/Entitlements/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title"> 
                <h1>
                    <span>@L("Entitlements")</span> <small>@L("EntitlementsHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions.Pages_Leave_LeaveTypes_Create))
        {
            <button id="CreateNewLeaveTypeButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateEntitlement")</button>
        }
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">

        <div class="row">

            <form id="LoadEntitlementForm" id="LoadEntitlementForm">
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control edited" type="text" name="EmployeeNumber" required>
                        <label>@L("EmployeeNumber")</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownList("LeavePeriodId", ViewBag.LeaveTypeId as SelectList, new {@class = "form-control edited"})
                        <label>@L("LeaveType")</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownList("PeriodId", ViewBag.PeriodId as SelectList, new {@class = "form-control edited"})
                        <label>@L("LeavePeriod")</label>
                    </div>
                </div>
            </form>


            <div class="col-md-3">
                <button style="margin-top: 15px;" id="LoadButton" class="btn btn-default green-dark"><i class="fa fa-search"></i> @L("Load")</button>
            </div>
        </div>

        
    </div>
    <div class="portlet-body">
        <div id="EntitlementsTable"></div>
    </div>
</div>
