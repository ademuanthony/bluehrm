@using Abp.Extensions
@using SoftBreeze.BlueHrm
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@using SoftBreeze.BlueHrm.Authorization.Roles
@model SoftBreeze.BlueHrm.Web.Areas.Leave.Models.CreateOrEditLeaveTypeModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml",
    new ModalHeaderViewModel(Model.IsEditMode ? (L("EditLeaveType"))
    : L("AddLeaveType")))

<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#LeaveTypeInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("LeaveType")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="JobInformationsTab">

                <form name="LeaveTypeForm" role="form" novalidate class="form-validation">

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.LeaveType.Id" />
                    }
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.LeaveType.Name.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="Name" value="@Model.LeaveType.Name">
                        <label>@L("Name")</label>
                    </div>

                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.LeaveType.IsEntitlementSituational, 
                       new { @class = "form-control edited", Name = "IsEntitlementSituational" })
                        <label>@L("IsEntitlementSituational")</label>
                    </div>



                </form>

            </div>
        </div>
    </div>
</div>



@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")