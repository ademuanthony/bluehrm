@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@{
    ViewBag.CurrentPageName = PageNames.App.Timing.AttendanceReport;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Time/Views/Attendance/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Time/Views/Attendance/Report.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("ReportAttendance")</span> <small>@L("AttendanceHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">

        <div class="row">

            <form id="LoadAttendanceForm">
                <div class="col-md-5">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control datepicker" type="text" name="Date" value="@Clock.Now.ToShortDateString()" required>
                        <label>@L("Date")</label>
                    </div>
                </div>
                
                <div class="col-md-2">
                    <button style="margin-top: 15px;" id="LoadButton" class="btn btn-default green">
                        <i class="fa fa-search"></i> @L("Load")
                    </button>
                </div>
            </form>



        </div>


    </div>
    <div class="portlet-body">
        <div id="AttendanceTable"></div>
    </div>
</div>
