@using Abp.Extensions
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@using SoftBreeze.BlueHrm.Authorization.Roles
@model SoftBreeze.BlueHrm.Web.Areas.Pim.Models.CreateOrEditEmergencyContactModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml",
    new ModalHeaderViewModel(Model.IsEditMode ? (L("EditEmergencyContact") + ": " + Model.EmergencyContact.Name)
    : L("CreateEmergencyContact")))

<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#JobInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("Contact")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="JobInformationsTab">

                <form name="ContactDataformationsForm" role="form" novalidate class="form-validation">
                    <input type="hidden" name="EmployeeId" value="@ViewBag.EmployeeId"/>

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.EmergencyContact.Id"/>
                    }

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.EmergencyContact.Name.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="Name" value="@Model.EmergencyContact.Name" required="">
                        <label>@L("Name")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.EmergencyContact.Relationship.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="Relationship" value="@Model.EmergencyContact.Relationship" required="">
                        <label>@L("Relationship")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.EmergencyContact.MobilePhoneNumber.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="MobilePhoneNumber" value="@Model.EmergencyContact.MobilePhoneNumber" required>
                        <label>@L("MobilePhoneNumber")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.EmergencyContact.HomePhoneNumber.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="HomePhoneNumber" value="@Model.EmergencyContact.HomePhoneNumber">
                        <label>@L("HomePhoneNumber")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input class="form-control@(Model.EmergencyContact.WorkPhoneNumber.IsNullOrEmpty() ? "" : " edited")"
                               type="text" name="WorkPhoneNumber" value="@Model.EmergencyContact.WorkPhoneNumber">
                        <label>@L("WorkPhoneNumber")</label>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>



@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")