@using Abp.Extensions
@using SoftBreeze.BlueHrm
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@using SoftBreeze.BlueHrm.Authorization.Roles
@model SoftBreeze.BlueHrm.Web.Areas.Pim.Models.CreateOrEditSupervisorModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml",
    new ModalHeaderViewModel(Model.IsEditMode ? (L("EditSupervisor"))
    : L("AssignSupervisor")))

<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#SupervisorInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("Supervisor")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="JobInformationsTab">

                <form name="SupervisorDataformationsForm" role="form" novalidate class="form-validation">
                    <input type="hidden" name="EmployeeId" value="@ViewBag.EmployeeId" />

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.Supervisor.Id" />
                    }

                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownListFor(m => m.Supervisor.SupervisorId, ViewBag.Employees as SelectList,
                            new {@class = "form-control edited", Name = "SupervisorId" })
                        <label>@L("Supervisor")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownListFor(m => m.Supervisor.ReportMethod, ViewBag.ReportMethods as SelectList,
                            new { @class = "form-control edited", Name = "ReportMethod" })
                        <label>@L("ReportMethod")</label>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>



@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")