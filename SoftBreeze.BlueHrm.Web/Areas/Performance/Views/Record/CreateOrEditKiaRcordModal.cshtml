@using Abp.Extensions
@using SoftBreeze.BlueHrm
@using SoftBreeze.BlueHrm.Web.Areas.Mpa.Models.Common.Modals
@using SoftBreeze.BlueHrm.Authorization.Roles
@model SoftBreeze.BlueHrm.Web.Areas.Performance.Models.CreateOrEditKeyResultAreaModel
@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml",
    new ModalHeaderViewModel((L("EditRecord"))))

<div class="modal-body">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#LeaveTypeInformationsTab" data-toggle="tab" aria-expanded="true">
                    @L("KeyResultArea")
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="JobInformationsTab">

                <form name="KraForm" role="form" novalidate class="form-validation">
                    @Html.HiddenFor(m=>m.Kra.PerformanceId, new {Name= "PerformanceId" })

                    @if (Model.IsEditMode)
                    {
                        <input type="hidden" name="Id" value="@Model.Kra.Id"/>
                    }
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownListFor(m => m.Kra.AttributeId, ViewBag.AttributeId as SelectList, new {Name = "AttributeId", @class = "form-control edited"})
                        <label>@L("KPI")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        @Html.DropDownListFor(m => m.Kra.Rating, ViewBag.Ratings as SelectList, new {Name = "Rating", @class = "form-control edited"})
                        <label>@L("Rating")</label>
                    </div>


                    <div class="form-group form-md-line-input form-md-floating-label">
                        <textarea class="form-control edited" name="ActualAcheivement">@Model.Kra.ActualAcheivement</textarea>
                        <label>@L("ActualAchievement")</label>
                    </div>

                    <div class="form-group form-md-line-input form-md-floating-label">
                        <textarea class="form-control edited" name="Comment">@Model.Kra.Comment</textarea>
                        <label>@L("Comment")</label>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>



@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")