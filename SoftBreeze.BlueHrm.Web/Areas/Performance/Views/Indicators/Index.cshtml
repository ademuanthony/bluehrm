@using Abp.Web.Mvc.Extensions
@using SoftBreeze.BlueHrm.Web.Navigation
@using SoftBreeze.BlueHrm.Authorization
@{
    ViewBag.CurrentPageName = PageNames.App.Performance.KeyResultAreas;
}
@section Styles
{
    @Html.IncludeStyle("~/Areas/Performance/Views/Indicators/Index.min.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/Performance/Views/Indicators/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Performance/Views/Indicators/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title"> 
                <h1>
                    <span>@L("KeyPerformanceIndicator")</span> <small>@L("KeyPerformanceIndicatorHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions.Pages_Performance_KeyResultAreas_Create))
        {
            <button id="CreateNewKeyResultAreaButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateKPI")</button>
        }
    </div>
</div>
<div class="portlet light">
    <div class="portlet-body">
        <div id="KeyResultAreasTable"></div>
    </div>
</div>
